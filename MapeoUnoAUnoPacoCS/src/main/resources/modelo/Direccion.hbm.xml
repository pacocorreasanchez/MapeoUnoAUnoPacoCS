<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="es.albarregas.beans.Direccion" table="direcciones1a1">
        
        <id name="id" type="integer">
            <column name="idDirec"/>
            <generator class="identity"/>
        </id>
        
        <property name="calle" length="30" not-null="true" />
        
        <property name="numero"  not-null="true" />
        
        <property name="poblacion" length="40" not-null="true" />
        
        <property name="provincia" length="30" not-null="true" />
    </class>
</hibernate-mapping>
